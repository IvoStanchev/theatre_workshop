<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Express Retake Exam January 2019</title>
    <link href="../styles/style.css" type="text/css" rel="stylesheet">

</head>

<body>

    {{>header}}

    <section class="notifications error">
        <p>Message...</p>
    </section>


    <main>
        {{#with play}}
        <form class="theater-form" action="/edit/{{this._id}}?_method=PATCH" method="POST">
            <h1>Edit Theater</h1>
            <div>
                <label for="title">Theater Title:</label>
                <input name="title" type="text" placeholder="Theater name" value="{{this.title}}">
            </div>
            <div>
                <label for="description">Theater Description:</label>
                <textarea name="description" placeholder="Description">{{this.description}}</textarea>
            </div>
            <div>
                <label for="imageUrl">Image url:</label>
                <input name="image" type="text" placeholder="Image Url" value="{{this.image}}">
            </div>
            {{/with}}
            {{#if isPublic}}
            <div class="check">
                <input name="public" type="checkbox" id="check-box" checked>
                <label for="check-box">Public</label>
            </div>
            {{else}}
            <div class="check">
                <input name="public" type="checkbox" id="check-box">
                <label for="check-box">Public</label>
            </div>
            {{/if}}
            <button class="btn" type="submit">Submit</button>
        </form>
    </main>

    {{>footer}}

</body>

</html>